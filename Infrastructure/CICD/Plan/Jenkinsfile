pipeline {
    agent any
    environment {
        AWS_CREDENTIALS_ID = 'AWS_CREDENTIALS' // Định danh credentials trong Jenkins
    }
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/BenNguyen97/Jenkins_Pipeline.git'
            }
        }
        stage('Init Terraform') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding', 
                    credentialsId: AWS_CREDENTIALS_ID
                ]]) {
                    sh 'terraform init'
                }
            }
        }
        stage('Plan Terraform') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding', 
                    credentialsId: AWS_CREDENTIALS_ID
                ]]) {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }
    }
}
