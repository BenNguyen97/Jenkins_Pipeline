pipeline {
    agent any
    environment {
        AWS_CREDENTIALS_ID = 'AWS_CREDENTIALS' // AWS Credentials trong Jenkins
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-token', // Sử dụng token
                    url: 'https://github.com/BenNguyen97/Jenkins_Pipeline.git'
            }
        }
        stage('Init Terraform') {
            steps {
                withCredentials([
                    [$class: 'AmazonWebServicesCredentialsBinding', credentialsId: AWS_CREDENTIALS_ID]
                ]) {
                    withEnv(["PATH+TF=/usr/local/bin"]) {
                        sh 'terraform init'
                    }
                }
            }
        }
        stage('Plan Terraform') {
            steps {
                withCredentials([
                    [$class: 'AmazonWebServicesCredentialsBinding', credentialsId: AWS_CREDENTIALS_ID]
                ]) {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }
        stage('Apply Terraform') {
            steps {
                withCredentials([
                    [$class: 'AmazonWebServicesCredentialsBinding', credentialsId: AWS_CREDENTIALS_ID]
                ]) {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }
}
