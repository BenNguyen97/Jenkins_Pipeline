pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/BenNguyen97/Jenkins_Pipeline.git'
            }
        }
        stage('Init Terraform') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Plan Destroy') {
            steps {
                sh '''
                terraform plan -destroy \
                -var="access_key=${AWS_ACCESS_KEY_ID}" \
                -var="secret_key=${AWS_SECRET_ACCESS_KEY}" \
                -out=tfplan
                '''
            }
        }
        stage('Approve Destruction') {
            when {
                expression { return input(message: 'Approve Terraform Destroy?', ok: 'Proceed') }
            }
            steps {
                echo "Approved! Proceeding with destruction..."
            }
        }
        stage('Destroy Terraform') {
            steps {
                sh '''
                terraform destroy -auto-approve \
                -var="access_key=${AWS_ACCESS_KEY_ID}" \
                -var="secret_key=${AWS_SECRET_ACCESS_KEY}"
                '''
            }
        }
    }
}
